<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.marno.btm.mapper.GetUserMapper">

    <select id="newUser" resultType="Map">
        SELECT * FROM Users WHERE userID = #{unionId}
    </select>

    <insert id="getUser" parameterType="Map">
        INSERT INTO Users(userID,nickName,gender,city,province,country,avatarUrl,unionId)
        values (#{openId},#{nickName},#{gender},#{city},#{province},#{country},#{avatarUrl},#{unionId})
        FROM DUAL WHERE NOT EXISTS(SELECT * FROM Users WHERE userID = #{unionId})
    </insert>
</mapper>

        <!--1.namespace中需要与使用@Mapper的接口对应
        2.SystemMapper.xml文件名称必须与使用@Mapper的接口一致
        3.标签中的id必须与@Mapper的接口中的方法名一致，且参数一致
        4.#{xxx}中的变量名称不能大写，要求和传值字段一样-->
