    <!-- 查询出多条记录 -->
    <select id="getSceneList" resultType="java.util.Map" parameterType="java.lang.String">
        select sceneID , theme from scene where originatorID = #{originatorID}
    </select>

    <!--    查询场景详情-->
    <select id="getScene" resultType="Scene"  parameterType="java.lang.String">
        select * FROM scene
        <where>
            sceneID = #{sceneID}
        </where>
    </select>

