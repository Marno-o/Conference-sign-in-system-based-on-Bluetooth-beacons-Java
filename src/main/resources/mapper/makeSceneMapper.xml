<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.marno.btm.mapper.makeSceneMapper">

    <!--添加场景记录-->
    <insert id="makeScene" parameterType="Scene">
        insert into scene (SceneID,CreatTime,Mode,OriginatorID,State,ServiceID,Theme)
        values (#{sceneID},#{creatTime},#{mode},#{originatorID},#{state},#{serviceID},#{theme})
    </insert>

    <!--新建签到表-->
    <update id="makeSceneTable" parameterType="String">
        CREATE TABLE ${sceneTableName} (
        memberID VARCHAR(55) NOT NULL,
        signTime TIME NOT NULL,
        PRIMARY KEY (memberID))
    </update>

<!--    重复检测-->
    <select id="createTwice" resultType="Integer">
        select originatorID FROM scene
        <where>
            serviceID = #{serviceID}
        </where>
    </select>

</mapper>